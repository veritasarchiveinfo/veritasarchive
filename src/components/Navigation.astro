const { activePage } = Astro.props;
---
<nav class="navbar">
    <div class="nav-container">
        <a href="/" class="logo-text">VERITAS ARCHIVE</a>
        <div class="nav-links">
            <a href="/" class:list={["nav-link", { active: activePage === 'home' }]}>Home</a>
            <a href="/sources" class:list={["nav-link", { active: activePage === 'sources' }]}>Sources</a>
            <a href="/contact" class:list={["nav-link", { active: activePage === 'contact' }]}>Contact</a>
